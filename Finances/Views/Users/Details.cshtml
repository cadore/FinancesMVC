@model Finances.Entities.User

<br />
<div>
    <h3>Visualizar Usuário</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(m => m.id, "Cod.: ")
        </dt>
        <dd>
            @Html.DisplayFor(m => m.id)
        </dd>

        <dt>
            @Html.LabelFor(m => m.name, "Nome: ")
        </dt>
        <dd>
            @Html.DisplayFor(m => m.name)
        </dd>

        <dt>
            @Html.LabelFor(m => m.login, "Login: ")
        </dt>
        <dd>
            @Html.DisplayFor(m => m.login)
        </dd>

        <dt>
            @Html.LabelFor(m => m.email, "E-mail: ")
        </dt>
        <dd>
            @Html.DisplayFor(m => m.email)
        </dd>

    </dl>
    </div>
    <div id="actions" class="row">
        <div class="col-md-12">
            <a class="btn btn-warning" href="/Users/Edit/@Model.id"><i class="fa fa-pencil"></i> Editar</a>
            <a class="btn btn-default" href="/Users"><i class="fa fa-undo"></i> Voltar</a>
            @if (Model != null)
            {
                if (Model.id > 0)
                {
                    <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#modal-delete"><i class="fa fa-trash"></i> Excluir</a>
                }
            }
        </div>
    </div>
@Html.Partial("~/Views/Users/Modals.cshtml", Model)